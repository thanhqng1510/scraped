{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "module": "commonjs",
    "rootDir": ".",
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@server/*": ["./*"]
    }
  }
}