{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}